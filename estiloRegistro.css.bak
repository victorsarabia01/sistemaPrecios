/* Style inputs, select elements and textareas */
input[type=text], select, textarea,date{
    width: 100%;
    padding: 17px;
    border: 1px solid #ccc;
    border-radius: 80px;
    box-sizing: border-box;
    resize: vertical;
  }
input[type=date]{
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    resize: vertical;
	align-items: left;
  }
.fechaSelect{
	width: 1%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
    resize: vertical;
 }
/* Style the label to display next to the inputs */
label {
    padding: 12px 12px 12px 0;
    display: inline-block;
    font-weight: 1000;
    color: rgb(29, 35, 46);
    font-size: 15px;
   
  }
  /* Style the submit button */
input[type=submit] {
    background-color: #4CAF50;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    float: right;
  }

input[type=text]:focus {
  border: 5px solid rgb(30, 210, 156);
}

input[type=text]:hover {
  border: 5px solid rgb(30, 210, 156);
}

.tcenter{
    text-align: center;
    align-items: center; 
}
.seleccion{
    width: 20%; /*CAMPOS DE SELECCION DE FECHA*/
    float: left;
}
 
/* Floating column for labels: 25% width */
.col-25 {
    float: left;
    width: 25%;
    margin-top: 6px;
  }
  
  /* Floating column for inputs: 75% width */
  .col-75 {
    float: left;
    width: 75%;
    margin-top: 6px;
  }
   /* Clear floats after the columns */
   .row:after {
    content: "";
    display: table;
    clear: both;
  }
  
  @media (max-width: 550px){ /* comportamiento segun medidas */

    .colum{
        width: 45%;
        /* padding: 11px;
        margin: 10px 10px 10px 10px; */
        margin-bottom: 20px;
    }
    .container{
        width: 500px;
    }
    p{
      font-size: small;  
    }
}
@media (max-width: 300px){ /* comportamiento segun medidas */

    .colum{
        width: 80%;
        margin-bottom: 20px;
    }
    .container{
        width: 300px;/* volumen de un seccion */
    }
    p{
        font-size: small; /* tamano letra parrafo */
    }
}
 /* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
 @media screen and (max-width: 600px) {
    .col-25, .col-75, input[type=submit] {
      width: 100%;
      margin-top: 0;
    }
  }